{% trans_default_domain "symbb_frontend" %}

{% block form_row %}
{% spaceless %}
    <div class="input-group">
        {% if form.vars.block_prefixes.1 != 'checkbox' %}
        <span class="input-group-addon">{{ form_label(form) }}</span>
        {% endif %}
        {{ form_widget(form) }}
        {% if form.vars.block_prefixes.1 == 'checkbox' %}
        <span class="form-control ">{{ form_label(form) }}</span>
        {% endif %}
    </div>
    {{ form_errors(form) }}
{% endspaceless %}
{% endblock form_row %}

{% block form_resttable %}
{% spaceless %}
    {% for child in form %}
        {% if not child.rendered %}
            {{ form_rowtable(child) }}
        {% endif %}
    {% endfor %}
{% endspaceless %}
{% endblock form_resttable %}

{% block form_rowtable %}
{% spaceless %}
    {{ form_errorstable(form) }}
    <tr>
        <td>{{ form_label(form) }}</td>
        <td>{{ form_widget(form) }}</td>
    </tr>
{% endspaceless %}
{% endblock form_rowtable %}

{% block form_widget_simple %}
{% spaceless %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" class="form-control" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endspaceless %}
{% endblock form_widget_simple %}
    
{% block checkbox_widget %}
{% spaceless %}
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{% endspaceless %}
{% endblock checkbox_widget %}

{% block choice_widget_collapsed %}
{% spaceless %}
    {% if required and empty_value is none and not empty_value_in_choices %}
        {% set required = false %}
    {% endif %}
    <select class="form-control" {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
        {% if empty_value is not none %}
            <option value=""{% if required and value is empty %} selected="selected"{% endif %}>{{ empty_value|trans({}, translation_domain) }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
            {{ block('choice_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('choice_widget_options') }}
    </select>
{% endspaceless %}
{% endblock choice_widget_collapsed %}
    
{% block form_errorstable %}
    {% spaceless %}
        {% if errors|length > 0 %}
        <tr>
            <td colspan="2">{{ form_errors(form) }}</td>
        </tr>
        {% endif %}
    {% endspaceless %}
{% endblock form_errorstable %}
    
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
        <div class="panel panel-danger">
          <div class="panel-body">
            {% trans %}There was an error{% endtrans %}
          </div>
          <div class="panel-footer">
              <ul>
                {% for error in errors %}
                  <li>{{ error.message }}</li>
                {% endfor %}
              </ul>
          </div>
        </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
    
{% block textarea_widget %}
{% spaceless %}
    <textarea class="form-control" {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endspaceless %}
{% endblock textarea_widget %}
    
{% block button_widget %}
{% spaceless %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <button type="{{ type|default('button') }}" {{ block('button_attributes') }} class="btn btn-default">{{ label|trans({}, translation_domain) }}</button>
{% endspaceless %}
{% endblock button_widget %}