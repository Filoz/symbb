{% trans_default_domain "symbb_frontend" %}

<div id="symbb_bbcode_editor" class="symbb_editor bbcode">
    <div class="preview">
        
    </div> 
    <div class="bbcode_list symbb_topic ">
        
        <div class="row symbb_header_bg subheader">
            <div class="col-md-12">{% trans %}new Post{% endtrans %}</div>
        </div>
        <div class="row body">
            <div class="col-md-3 userblock">

            </div>
                <div class="col-md-9 textblock">
                {% for key, groups in bbcodes %}
                        
                    <div class="btn-group">
                    <button type="button" class="btn btn-info btn-sm">{{ key }}</button>
                    {% for bbcode in groups %}
                        <button type="button" data-tag="{{ bbcode.tag }}" class="btn btn-default btn-sm symbb_bbcode_code">{{ bbcode.name }}</button>
                    {% endfor %}
                    </div>
                {% endfor %}
                <div class="text_input">
                    <textarea class="symbb_bbcode_editor_textarea"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>