{% extends getSymbbTemplateConfig('acp') ~ ':Acp:Layout/managment.html.twig' %}

{% trans_default_domain "symbb_backend" %}


{% block symbb_body %}
    <div class="panel panel-primary">
        <div class="panel-heading">
           {{ 'Groupmanagment'|trans }} 
        </div>
        <table class="table">
            <colgroup>
                <col style="width: auto;" />
                <col style="width: 100px;" />
            </colgroup>
            <thead>
                <tr>
                    <th>{{ 'Group'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                </tr>
            </thead>
            <tbody class="sortable_table">
                {% for entry in entityList %}
                    <tr id="entry_{{entry.getId()}}">
                        <td class="clickable" >{{entry.getName()}}</td>
                        <td>
                            <a href="{{ path('_symbbcoreuserbundle_group_edit', {id: entry.getId()}) }}"><img class="clickable" src="/bundles/symbbtemplatesimple/images/icons/16_16/pencil.png" alt="{{ 'Editieren'|trans }}" title="{{ 'Editieren'|trans }}" /> </a>
                            <a onclick="if(!confirm('{{ 'Eintrag wirklich löschen?'|trans }}')) { return false; }" href="{{ path('_symbbcoreuserbundle_group_remove', {id: entry.getId()}) }}"><img class="clickable" src="/bundles/symbbtemplatesimple/images/icons/16_16/cross.png" alt="{{ 'Löschen'|trans }}" title="{{ 'Löschen'|trans }}" /> </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}