{% extends getSymbbTemplateConfig('forum') ~ ':Topic:show.html.twig' %}

{% block stylesheets %} 
    {{ parent() }}
    {{ executeSymbbTemplatePostEvent('stylesheets', post) }}
{% endblock %}
    
{% block javascripts %} 
    {{ parent() }}
    {% javascripts 
        '@SymBBCoreForumBundle/Resources/public/js/tabs.js' filter='?yui_js'
        '@SymBBCoreForumBundle/Resources/public/js/datepicker.js' filter='?yui_js'
     %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {{ executeSymbbTemplatePostEvent('javascripts', post) }}
{% endblock %}

{% block symbb_body %}

    {% include getSymbbTemplateConfig('forum') ~ ':Post:new.html.twig' with {'form': form, 'bbcodes': bbcodes, 'topic': topic} %}

{% endblock %}