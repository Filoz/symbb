{% trans_default_domain "symbb_frontend" %}

<nav class="navbar" role="navigation">
    <ul>
        <li>
            <a href="{{ path('symbb_forum_index') }}">
                <span class="glyphicon glyphicon-th-list"></span>
                <span class="text">{% trans %}Forum{% endtrans %}</span>
            </a>
        </li>
        {% if app.user.getSymbbType != 'guest' %}
        <li>
            <a href="{{ path('fos_message_inbox') }}">
                <span class="glyphicon glyphicon-comment {% if fos_message_nb_unread() %} glyphicon-danger {% endif %}"></span>
                <span class="text">{{ fos_message_nb_unread() }} {% trans %}Messages{% endtrans %}</span>
            </a>
        </li>
        <li>
            <a href="{{ path('symbb_user_options') }}">
                <span class="glyphicon glyphicon-cog"></span>
                <span class="text">{% trans %}Options{% endtrans %}</span>
            </a>
        </li>
        <li>
            <a href="{{ path('symbb_forum_newest') }}">
                <span class="glyphicon glyphicon-fire"></span>
                <span class="text">{% trans %}Newest Posts{% endtrans %}</span>
            </a>
        </li>
        {% endif %}
        <li>
            <a href="{{ path('symbb_user_userlist') }}">
                <span class="glyphicon glyphicon-user"></span>
                <span class="text">{% trans %}Members{% endtrans %}</span>
            </a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
        <li>
            <a href="{{ path('_symbb_acp') }}">
                <span class="glyphicon glyphicon-tasks glyphicon-warning"></span>
                <span class="text">{% trans %}Adminpanel{% endtrans %}</span>
            </a>
        </li>
        {% endif %}

        {% if app.user.getSymbbType == 'guest' %}
        <li>
            <a href="{{ path('symbb_login') }}">
                <span class="glyphicon glyphicon-off glyphicon-success"></span>
                <span class="text">{% trans %}Sign in{% endtrans %}</span>
            </a>
        </li>
        <li>
            <a href="{{ path('symbb_register') }}">
                <span class="glyphicon glyphicon-plus-sign glyphicon-success"></span>
                <span class="text">{% trans %}Sign up{% endtrans %}</span>
            </a>
        </li>
        {% else %}
        <li>
            <a href="{{ path('symbb_logout') }}">
                <span class="glyphicon glyphicon-off glyphicon-warning"></span>
                <span class="text">{% trans %}Logout{% endtrans %}</span>
            </a>
        </li>
        {% endif %}
    </ul>
</nav>