{% trans_default_domain "symbb_frontend" %}

{% extends getSymbbTemplate('forum') ~ '::layout.html.twig' %}

{% block stylesheets %} 
    {{ parent() }}
    {% stylesheets 
        '@SymBBTemplateDefaultBundle/Resources/public/css/forum.css' filter='?yui_css'
        '@SymBBTemplateDefaultBundle/Resources/public/css/topic.css' filter='?yui_css'
     %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {{ executeSymbbEvent('template.forum.stylesheets') }}
{% endblock %}
    
{% block javascripts %} 
    {{ parent() }}
    {% javascripts 
        '@SymBBTemplateDefaultBundle/Resources/public/js/datepicker/jquery.datetimepicker.js' filter='?yui_js'
        '@SymBBTemplateDefaultBundle/Resources/public/js/form/collection.js' filter='?yui_js'
            '@SymBBTemplateDefaultBundle/Resources/public/js/frontend/forum/app.js' filter='?yui_js'
            '@SymBBTemplateDefaultBundle/Resources/public/js/frontend/forum/controllers.js' filter='?yui_js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {{ executeSymbbEvent('template.forum.javascripts') }}
    <script>
    // init user data for frontend
    symbbUser.id = {{app.user.id}};
    symbbUser.avatar = '{{getSymbbUserAvatar(app.user)}}';
    </script>
{% endblock %}
    
{% block symbb_breadcrumb %}
    <symbb-breadcrumb></symbb-breadcrumb>
{% endblock %}
    
    
   
