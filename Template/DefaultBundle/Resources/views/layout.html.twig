{% trans_default_domain "symbb_frontend" %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
  <head>
    <title>{% block title %}{% endblock %}</title>
    <meta http-equiv="Content-Language" content="{{ app.request.locale }}" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    
    {% block stylesheets %} 
        {% stylesheets 
            '@SymBBTemplateDefaultBundle/Resources/public/css/theme.css' filter='?yui_css'
            '@SymBBTemplateDefaultBundle/Resources/public/css/form.css' filter='?yui_css'
            '@SymBBTemplateDefaultBundle/Resources/public/css/navi.css' filter='?yui_css'
            '@SymBBTemplateDefaultBundle/Resources/public/css/datepicker/jquery.datetimepicker.css' filter='?yui_css'
         %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
        {{ executeSymbbEvent('template.global.stylesheets') }}
        {{ executeSymbbEvent('template.forum.stylesheets') }}
    {% endblock %}
        
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
        
    {% block javascripts %} 
        {% javascripts 
            '@SymBBTemplateDefaultBundle/Resources/public/js/datepicker/jquery.datetimepicker.js' filter='?yui_js'
            '@SymBBTemplateDefaultBundle/Resources/public/js/form/collection.js' filter='?yui_js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {{ executeSymbbEvent('template.global.javascripts') }}
        {{ executeSymbbEvent('template.forum.javascripts') }}
    {% endblock %}
    <script>
        $(function() {

            $('input[type="datetime"]').datetimepicker({
              format: '{{ getIntlDatePattern('MEDIUM', true) }}'
            });  

            $('.datetime').datetimepicker({
              format: '{{ getIntlDatePattern('MEDIUM', true) }}'
            }); 
            $( ".symbb_tooltip" ).tooltip( "option", "hide" );
        });
    </script>
    </head>

    <body>
        <div id="wrap">
            <div class="symbb_user_panel">
                <div class="brand">SymBB</div>
                <div class="arrow"></div>
                <div class="content">
                {% block symbb_userinfob %}
                    {% if app.user.getSymbbType() == 'user' %}
                    <div class="avatar avatar_mini">
                        <img src="{{getSymbbUserAvatar(app.user)}}" />
                    </div>
                    {% endif %}
                    <div class="username">{{app.user.getUsername()}}</div>
                    {% if app.user.getSymbbType == 'user' %}
                    <div class="usermenu">
                           <!--
                        <button type="button" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-comment"></span> XX {{ 'Chat'|trans }} 
                        </button>

                        <div class="chatbox">
                            <div class="lastMessage"><marquee>TODO: Chat einbauen und letzte Chat-Nachricht hier anzeigen</marquee></div>
                            <div class="text">
                                <input value="" placeholder="...hier kannst du antworten">
                            </div>
                        </div>
                           -->
                    </div>
                    {% endif %}
                    <div class="f-right usermenu">
                        {% if is_granted('ROLE_ADMIN') %}
                        <button onclick="window.location.href='{{ path('_symbb_acp') }}'" type="button" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-list-alt"></span> {{ 'Adminpanel'|trans }}
                        </button>
                        {% endif %}

                        {% if app.user.getSymbbType == 'guest' %}
                        <button onclick="window.location.href='{{ path('symbb_login') }}'" type="button" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-off"></span> {{ 'Sign in'|trans }}
                        </button>
                        <button onclick="window.location.href='{{ path('symbb_register') }}'" type="button" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-plus-sign"></span> {{ 'Sign up'|trans }}
                        </button>
                        {% else %}
                        <button onclick="window.location.href='{{ path('symbb_logout') }}'" type="button" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-off"></span> {{ 'Logout'|trans }}
                        </button>
                        {% endif %}
                    </div>
                {% endblock %}
                    <div class="clear"></div>
                </div>
            </div>

            <div class="symbb_navi">
                {% block symbb_navi %} 
                    {% include getSymbbTemplate('forum') ~ ':Forum:navi.html.twig' %}
                {% endblock %}
            </div>

            <div class="symbb_container">
                <div class="symbb_content">


                    {% block symbb_breadcrumb %}
                        {{ getSymbbBreadcrumb() }}
                    {% endblock %}

                    <div class="clear"></div>

                    <div class="symbb_flash_messages"> 
                        {% if app.getUser.getSymbbType() == 'guest' %}
                            <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                {% trans %}You are not currently logged.{% endtrans %}
                            </div>
                        {% endif %}

                        {% for flashMessage in app.session.flashbag.get('success') %}
                            <div class="alert alert-success">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}

                        {% for flashMessage in app.session.flashbag.get('error') %}
                            <div class="alert alert-danger">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                    </div>

                    <div class="clear"></div>
                    {% block symbb_body_container %}
                        <div class="symbb_body">
                            {% block symbb_body %}

                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>
        <div id="footer">
            <div class="container">
                
                {% set onlineUsers = getSymbbOnlineUsers() %}
                
                <div class="page-header">
                    {{ 'Who is online?'|trans }}
                </div>
                {{ 'user.online.total'|transchoice(getSymbbOnlineUserCount(), {'%count%': getSymbbOnlineUserCount()}) }}:
                {{ 'user.online.type'|trans({'%member_count%': getSymbbOnlineUserCount('user'), '%guest_count%': getSymbbOnlineUserCount('guest')}) }} <br/>
                {{ 'Members'|trans }}: 
                {% for onlineUser in onlineUsers if onlineUser.type == 'user'%}
                    {{ onlineUser.username }}, 
                {% endfor %}

                <div class="clear"></div>
            </div>
        </div>
    </body>
</html>