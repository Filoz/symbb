{% trans_default_domain "symbb_frontend" %}

<div class="symbb_tabcontent" data-tab="survey">
    <div class="panel panel-default">
        <div class="padding10">
            <div class="input-group">
                <span class="input-group-addon">
                    <label class="required" for="surveyQuestion">{{'The question'|trans}}</label>
                </span>
                <input type="text" ng-model="topic.extension.survey.question" class="form-control" placeholder="{{'The question'|trans}}" id="surveyQuestion">
            </div>
            <div class="input-group">
                <span class="input-group-addon">
                    <label class="required" for="surveyAnswers">{{'The answers'|trans}}</label>
                </span>
                <textarea ng-model="topic.extension.survey.answers" class="form-control" placeholder="{{'Give each answer on a separate line'|trans}}"id="surveyAnswers"></textarea>
            </div>
            <div class="input-group">
                <span class="input-group-addon">
                    <label class="required" for="surveyChoices">{{'Options per user'|trans}}</label>
                </span>
                <input type="number" ng-model="topic.extension.survey.choices" class="form-control" id="surveyChoices">
            </div>
            <div class="form-group">
                <label for="surveyChoicesChangeable" class="col-sm-2 control-label">{{'Allow changing the voting'|trans}}</label>
                <div class="col-sm-10">
                    <input type="checkbox" ng-model="topic.survey.choicesChangeable" id="surveyChoicesChangeable">
                </div>
                <div class="clear"></div>
            </div>
            <div class="input-group">
                <span class="input-group-addon">
                    <label class="required" for="surveyEnd">{{'Survey End'|trans}}</label>
                </span>
                <input type="datetime" ng-model="topic.extension.survey.end" class="form-control" id="surveyEnd">
            </div>
        </div>
    </div>
</div>